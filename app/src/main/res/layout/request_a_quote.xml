<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/request_quote_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="@color/md_white_1000"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <EditText
            android:id="@+id/quote_custom_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hi Damien! I want to hire you to make me an awesome app!"
            android:minLines="2" />

        <EditText
            android:id="@+id/quote_requester_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/quote_custom_message"
            android:gravity="end"
            android:hint="- Anonymous "
            android:maxLines="1"
            android:textAlignment="textEnd"

            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/request_quote_card_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/quote_requester_name"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_chat_24dp"
            android:tint="@color/md_white_1000" />

    </RelativeLayout>

</android.support.v7.widget.CardView>